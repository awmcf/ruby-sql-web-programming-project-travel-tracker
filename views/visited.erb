<h1>Where I've Been</h1>

<div id="city-wrapper">
  <% @cities.each do |city| if city.visited == "Yes" %>

  <div class="city">
    <h3><a href="/cities/<%= city.id %>"><%= city.name.capitalize%></a></h3>
    <p>Country: <%= city.country.name.capitalize %></p>
    <p>Visited: <%= city.visited %></p>
    <p>Rating: <%= city.rating %></p>
  </div>

  <% end %>


  <% end %>
</div>

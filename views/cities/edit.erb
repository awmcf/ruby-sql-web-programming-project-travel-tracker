<h2>Edit <%= @city.name %></h2>
<form method="POST" action="/cities/<%= @city.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">City Name:</label>
      <input type="text" name="name" id="name"  <%= @city.name %> />
    </div>

    <div class="form-el">
      <label for="country_select">Select Country:</label>
      <select name="country_id" id="country_select" selected="<%= @city.country_id  %>">
        <% @countries.each do |country| %>
          <% if country.id == @city.country_id %>
            <option value=<%= country.id %> selected><%= country.name.capitalize %></option>
          <% else %>
            <option value=<%= country.id %>><%= country.name.capitalize %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="visited_select">Visited?</label>
      <select name="visited" id="visited_select">
            <option value="yes">yes</option>
            <option value="no">no</option>
      </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Add City"/>
    </div>

  </div>
</form>
